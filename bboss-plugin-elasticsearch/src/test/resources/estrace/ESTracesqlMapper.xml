  <property name="queryPeriodsTopN">
    <![CDATA[
        {
            "query": {
                "bool": {
                    "filter": {
                        "term": {
                            "applicationName": "$application"
                        }
                    },
                    "must": {
                        "range": {
                            "startTime": {
                                "gte": $startTime,
                                "lt": $endTime
                            }
                        }
                    }
                }
            },
            "size": 0,
            "aggs" : {
                "elapsed_ranges" : {
                    "range" : {
                        "field" : "sqlEndElapsed",
                        "keyed" : true,
                        "ranges" : [
                            { "key" : "1秒", "to" : 1000 },
                            { "key" : "3秒", "from" : 1000, "to" : 3000 },
                            { "key" : "5秒", "from" : 3000, "to" : 5000 },
                            { "key" : "10秒", "from" : 5000, "to" : 10000 },
                            { "key" : "20秒", "from" : 10000, "to" : 20000 },
                            { "key" : "严重", "from" : 20000}
                        ]
                    },
                    "aggs" : {
                        "elapsed_stats" : {
                            "stats" : { "field" : "sqlEndElapsed"}
                        }
                    }
                }
            }

        }
        ]]>
  </property>

    <property name="queryServiceDetailBySQL">
        <![CDATA[{
            "sort": [
                {
                    "startTime": {
                        "order": "desc"
                    }
                },
                "_score"
            ],
            "size":10000,
            "query": {
                "bool": {
                    "filter": [
                        {"term": {
                            "applicationName": "$application"

                        }},
                        {"term": {

                             "sqlStr.keyword": "$sql"
                        }}
                    ],
                    "must": {
                        "range": {
                            "startTime": {
                                "gte": $startTime,
                                "lt": $endTime
                            }
                        }
                    }
                }
            }
        }]]>
    </property>


</properties>